<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sportapplicationproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportApplicationProject">
        <activity
            android:name=".RussianTopScoresActivity"
            android:exported="false" />
        <activity
            android:name=".RussianPlayersActivity"
            android:exported="false" />
        <activity
            android:name=".EnglishStandingsActivity"
            android:exported="false" />
        <activity
            android:name=".RussianStandingsActivity"
            android:exported="false" />
        <activity
            android:name=".LiveActivity"
            android:exported="false" />
        <activity
            android:name=".EnglishActivity"
            android:exported="false" />
        <activity
            android:name=".RussianActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>